@{
    ViewData["Title"] = "Session Expired";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card mt-5">
            <div class="card-header bg-danger text-white">
                <h3>Session Expired</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @(TempData["ErrorMessage"] ?? "Your session has expired or you are not properly authenticated.")
                </div>
                
                <p class="lead">
                    Please sign in again to continue using the application.
                </p>
                
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">
                    <i class="fas fa-sign-in-alt me-2"></i> Sign In Again
                </a>
                
                <a href="javascript:history.back()" class="btn btn-secondary mt-3 ms-2">
                    <i class="fas fa-arrow-left me-2"></i> Go Back
                </a>
            </div>
        </div>
    </div>
</div> 