@model Bashinda.ViewModels.AdminViewModel
@{
    ViewData["Title"] = "Delete Admin";
}

<div class="container mt-4">
    <h1>Delete Admin</h1>
    <div class="alert alert-danger">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this admin user? This action cannot be undone.</p>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Admin Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>User Information</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Username</dt>
                                <dd class="col-sm-8">@Model.UserName</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone Number</dt>
                                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                                <dt class="col-sm-4">Created Date</dt>
                                <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Location Access</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Division</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.DivisionName) ? "All Divisions" : Model.DivisionName)</dd>

                                <dt class="col-sm-4">District</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.DistrictName) ? "All Districts" : Model.DistrictName)</dd>

                                <dt class="col-sm-4">Upazila</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.UpazilaName) ? "All Upazilas" : Model.UpazilaName)</dd>

                                <dt class="col-sm-4">Ward</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.WardName) ? "All Wards" : Model.WardName)</dd>

                                <dt class="col-sm-4">Village</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.VillageName) ? "All Villages" : Model.VillageName)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 