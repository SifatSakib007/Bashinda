@model Bashinda.ViewModels.CreateApartmentDto
@{
    ViewData["Title"] = "Edit Apartment";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12 mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Apartment" asp-action="MyApartments">My Apartments</a></li>
                    <li class="breadcrumb-item active">Edit Apartment</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h3 class="mb-0">Edit Apartment</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditApartment" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BuildingName" class="form-label">Building Name</label>
                                <input asp-for="BuildingName" class="form-control" />
                                <span asp-validation-for="BuildingName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ApartmentNumber" class="form-label">Apartment Number</label>
                                <input asp-for="ApartmentNumber" class="form-control" />
                                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="Address" class="form-label">Address</label>
                                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="NumberOfRooms" class="form-label">Number of Rooms</label>
                                <input asp-for="NumberOfRooms" class="form-control" type="number" min="1" />
                                <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="NumberOfBathrooms" class="form-label">Number of Bathrooms</label>
                                <input asp-for="NumberOfBathrooms" class="form-control" type="number" min="1" />
                                <span asp-validation-for="NumberOfBathrooms" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="SquareFeet" class="form-label">Square Feet</label>
                                <input asp-for="SquareFeet" class="form-control" type="number" min="0" step="0.01" />
                                <span asp-validation-for="SquareFeet" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MonthlyRent" class="form-label">Monthly Rent ($)</label>
                                <input asp-for="MonthlyRent" class="form-control" type="number" min="0" step="0.01" />
                                <span asp-validation-for="MonthlyRent" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-controller="Apartment" asp-action="MyApartments" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Apartment Image</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Apartment" asp-action="UploadImage" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Context.Request.RouteValues["id"]" />
                        <div class="mb-3">
                            <label for="file" class="form-label">Upload Image</label>
                            <input type="file" id="file" name="file" class="form-control" accept="image/*" required />
                            <div class="form-text">Select an image to upload (JPEG, PNG, or GIF).</div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-upload"></i> Upload Image
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 