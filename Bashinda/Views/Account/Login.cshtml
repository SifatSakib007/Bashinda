<!-- Login View -->
@model Bashinda.ViewModels.LoginRequestDto
@{
    ViewData["Title"] = "Login";
    ViewData["HideNavbar"] = true;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="auth-card">
                <div class="auth-header">
                    <h2>Welcome Back</h2>
                    <p class="text-muted">Please sign in to continue</p>
                </div>

                <form asp-controller="Account" asp-action="Login" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    
                    @if (ViewContext.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                    }

                    <div class="input-icon mb-4">
                        <i class="bi bi-person"></i>
                        <input asp-for="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>

                    <div class="input-icon mb-4">
                        <i class="bi bi-lock"></i>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">Sign In</button>
                    
                    <div class="text-center mt-4">
                        <p class="mb-0">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-primary fw-bold">Register</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}

<style>
    .auth-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .input-icon input {
        padding-left: 3rem;
    }
</style>