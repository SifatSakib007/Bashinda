@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="auth-card text-center">
                <div class="mb-4">
                    <i class="fas fa-lock text-danger" style="font-size: 4rem;"></i>
                </div>
                
                <h2 class="text-danger mb-3">Access Denied</h2>
                <p class="lead mb-4">You do not have permission to access this resource.</p>
                
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div> 