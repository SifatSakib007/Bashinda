@model Bashinda.Models.RenterProfile
@{
    ViewData["Title"] = "Renter Profile";
}

<div class="container my-5">
    <div class="row">
        <!-- Profile Header -->
        <div class="col-md-12 mb-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body d-flex align-items-center">
                    <div class="profile-picture-container me-4">
                        @if (!string.IsNullOrEmpty(Model.SelfImagePath))
                        {
                            <img src="@Url.Content("~/" + Model.SelfImagePath)" alt="Profile Picture" class="profile-picture rounded-circle border border-3 border-white" />
                        }
                        else
                        {
                            <div class="profile-picture rounded-circle bg-light text-primary d-flex align-items-center justify-content-center">
                                <i class="fas fa-user fa-3x"></i>
                            </div>
                        }
                    </div>
                    <div>
                        <h2 class="mb-0">@Model.FullName</h2>
                        <p class="mb-0">@Model.Email | @Model.MobileNo</p>
                        <span class="badge bg-light text-dark mt-1">
                            @(Model.IsApproved ? "Approved" : "Pending Approval")
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Profile Information -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">Personal Information</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Basic Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th class="ps-0">Full Name</th>
                                    <td>@Model.FullName</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Date of Birth</th>
                                    <td>@Model.DateOfBirth.ToString("dd MMMM, yyyy")</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Gender</th>
                                    <td>@Model.Gender</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Nationality</th>
                                    <td>@Model.Nationality</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Blood Group</th>
                                    <td>@Model.BloodGroup</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Profession</th>
                                    <td>@Model.Profession</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Family Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th class="ps-0">Father's Name</th>
                                    <td>@Model.FatherName</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Mother's Name</th>
                                    <td>@Model.MotherName</td>
                                </tr>
                            </table>
                            
                            <h5 class="mt-4">Identity Information</h5>
                            <table class="table table-borderless">
                                @if (Model.IsAdult)
                                {
                                    <tr>
                                        <th class="ps-0">National ID</th>
                                        <td>@Model.NationalId</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.NationalIdImagePath))
                                    {
                                        <tr>
                                            <th class="ps-0">ID Document</th>
                                            <td>
                                                <a href="~/@Model.NationalIdImagePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-file-image me-1"></i> View Document
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th class="ps-0">Birth Reg. No</th>
                                        <td>@Model.BirthRegistrationNo</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(Model.BirthRegistrationImagePath))
                                    {
                                        <tr>
                                            <th class="ps-0">Birth Document</th>
                                            <td>
                                                <a href="~/@Model.BirthRegistrationImagePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-file-image me-1"></i> View Document
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">Contact Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Contact Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th class="ps-0">Email</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Mobile</th>
                                    <td>@Model.MobileNo</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Permanent Address</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <th class="ps-0">Division</th>
                                    <td>@Model.Division</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">District</th>
                                    <td>@Model.District</td>
                                </tr>
                                <tr>
                                    <th class="ps-0">Upazila</th>
                                    <td>@Model.Upazila</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">Account Actions</h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i> Update Profile
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-shield-alt me-2"></i> Change Password
                        </a>
                    </div>
                    
                    <div class="mt-4">
                        <h5>Account Status</h5>
                        <div class="mt-3">
                            @if (Model.IsApproved)
                            {
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle me-2"></i> Your profile has been approved.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-clock me-2"></i> Your profile is pending approval by admin.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0">Your Verification Documents</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @if (Model.IsAdult && !string.IsNullOrEmpty(Model.NationalIdImagePath))
                        {
                            <div class="document-card mb-3">
                                <div class="document-preview mb-2">
                                    <img src="~/@Model.NationalIdImagePath" alt="National ID" class="img-fluid" />
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>National ID</span>
                                    <a href="~/@Model.NationalIdImagePath" target="_blank" class="btn btn-sm btn-primary">View</a>
                                </div>
                            </div>
                        }
                        else if (!Model.IsAdult && !string.IsNullOrEmpty(Model.BirthRegistrationImagePath))
                        {
                            <div class="document-card mb-3">
                                <div class="document-preview mb-2">
                                    <img src="~/@Model.BirthRegistrationImagePath" alt="Birth Registration" class="img-fluid" />
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Birth Registration</span>
                                    <a href="~/@Model.BirthRegistrationImagePath" target="_blank" class="btn btn-sm btn-primary">View</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i> No verification documents uploaded.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-picture-container {
            width: 120px;
            height: 120px;
            position: relative;
        }
        
        .profile-picture {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .document-card {
            border: 1px solid #eee;
            border-radius: 0.5rem;
            padding: 1rem;
            background-color: #f9f9f9;
        }
        
        .document-preview {
            height: 150px;
            border-radius: 0.25rem;
            overflow: hidden;
            background: #eee;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .document-preview img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }
    </style>
} 