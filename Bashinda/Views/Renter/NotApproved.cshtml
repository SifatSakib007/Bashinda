@{
    ViewData["Title"] = "Approval Pending";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-clock text-warning mb-4" style="font-size: 4rem;"></i>
                    
                    <h2 class="card-title mb-3">Approval Pending</h2>
                    <p class="lead text-muted mb-4">
                        @(ViewBag.Message ?? "Your profile is currently awaiting approval from an administrator.")
                    </p>
                    
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle me-2"></i>What's Next?</h5>
                        <p class="mb-0">
                            Our team will review your profile shortly. This usually takes 1-2 business days.
                            You'll be notified once your profile is approved.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2 col-md-6 mx-auto mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i> Go to Home
                        </a>
                        <a asp-controller="Renter" asp-action="ViewProfile" class="btn btn-outline-secondary">
                            <i class="fas fa-user me-2"></i> View My Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 