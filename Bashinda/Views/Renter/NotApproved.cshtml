@{
    ViewData["Title"] = "Approval Required";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Admin Approval Required</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-clock fa-4x text-warning mb-3"></i>
                        <h5>@ViewBag.Message</h5>
                        <p class="text-muted">
                            Your profile is currently waiting for approval. The admin will review your 
                            information and approve your account soon.
                        </p>
                    </div>
                    
                    <div class="alert alert-info mb-4">
                        <h6><i class="fas fa-info-circle me-2"></i>What happens next?</h6>
                        <p class="mb-0">
                            Once approved, you'll gain access to all renter features including maintenance requests, 
                            community information, and apartment resources. This usually takes 1-2 business days.
                        </p>
                    </div>
                    
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Return to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 