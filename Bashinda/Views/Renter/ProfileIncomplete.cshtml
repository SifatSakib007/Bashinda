@{
    ViewData["Title"] = "Profile Incomplete";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="fas fa-exclamation-circle text-warning mb-4" style="font-size: 4rem;"></i>
                    
                    <h2 class="card-title mb-3">Complete Your Profile</h2>
                    <p class="lead text-muted mb-4">
                        @(ViewBag.Message ?? "You need to complete your renter profile before accessing this feature.")
                    </p>
                    
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle me-2"></i>Why Complete Your Profile?</h5>
                        <p class="mb-0">
                            A complete profile helps apartment owners verify your identity and ensures a smooth rental process. 
                            It takes just a few minutes and unlocks all features of the Bashinda platform.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2 col-md-6 mx-auto mt-4">
                        <a asp-controller="Renter" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-user-edit me-2"></i> Complete My Profile
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 