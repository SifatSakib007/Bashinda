@{
    ViewData["Title"] = "Renter Resources";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-bookmark me-2"></i>Renter Resources</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">@ViewBag.Message</p>
                        </div>
                    }
                    
                    <h5 class="card-title mb-4">Helpful Resources for Renters</h5>
                    <p>Access these exclusive resources available to all approved renters in our community.</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Documentation & Guides</h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-file-pdf text-danger me-2"></i> Renter's Handbook</span>
                                            <a href="#" class="btn btn-sm btn-outline-primary">Download</a>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-file-contract text-primary me-2"></i> Lease Agreement Guide</span>
                                            <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-map-marker-alt text-success me-2"></i> Neighborhood Guide</span>
                                            <a href="#" class="btn btn-sm btn-outline-primary">Explore</a>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-question-circle text-warning me-2"></i> FAQ for Renters</span>
                                            <a href="#" class="btn btn-sm btn-outline-primary">Read</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Community Services</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-4">
                                        <h6><i class="fas fa-tools text-secondary me-2"></i> Maintenance Request</h6>
                                        <p class="text-muted small">Submit maintenance requests for your apartment</p>
                                        <a href="#" class="btn btn-sm btn-success">New Request</a>
                                    </div>
                                    <div class="mb-4">
                                        <h6><i class="fas fa-comments text-primary me-2"></i> Community Forum</h6>
                                        <p class="text-muted small">Connect with other renters in your community</p>
                                        <a href="#" class="btn btn-sm btn-primary">Join Discussion</a>
                                    </div>
                                    <div>
                                        <h6><i class="fas fa-calendar-alt text-info me-2"></i> Upcoming Events</h6>
                                        <p class="text-muted small">View and RSVP to community events</p>
                                        <a href="#" class="btn btn-sm btn-info text-white">View Calendar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small>
                        <a asp-controller="Renter" asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 