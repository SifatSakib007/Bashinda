@{
    ViewData["Title"] = "Sample Renter Page";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-home me-2"></i>Renter Dashboard Feature</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info">
                            <p class="mb-0">@ViewBag.Message</p>
                        </div>
                    }
                    
                    <h5 class="card-title mb-4">Welcome to Your Renter Space</h5>
                    <p>This is a sample page that demonstrates the layout and features available to approved renters.</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <i class="fas fa-building fa-3x text-primary mb-3"></i>
                                    <h5>Find Apartments</h5>
                                    <p class="text-muted">Browse available apartments based on your preferences.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Explore</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                                    <h5>Appointments</h5>
                                    <p class="text-muted">Schedule viewings for your favorite apartments.</p>
                                    <a href="#" class="btn btn-sm btn-outline-success">Schedule</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <i class="fas fa-star fa-3x text-warning mb-3"></i>
                                    <h5>Favorites</h5>
                                    <p class="text-muted">View and manage your saved apartment listings.</p>
                                    <a href="#" class="btn btn-sm btn-outline-warning">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">This is a sample feature page for demonstration purposes.</small>
                        <a asp-controller="Renter" asp-action="Index" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 