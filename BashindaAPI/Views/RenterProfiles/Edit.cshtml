@model BashindaAPI.ViewModels.RenterProfileViewModel

@{
    ViewData["Title"] = "Edit Renter Profile";
}

<h1>@ViewData["Title"]</h1>

<form id="renter-profile-form" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>Personal Information</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsAdult" class="form-check-input" type="checkbox" id="IsAdult" />
                    <label asp-for="IsAdult" class="form-check-label">Is Adult (18 years or older)</label>
                </div>
            </div>
            
            <div class="adult-fields">
                <div class="form-group">
                    <label asp-for="NationalId" class="control-label">National ID</label>
                    <input asp-for="NationalId" class="form-control" maxlength="20" />
                    <span asp-validation-for="NationalId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="control-label">National ID Image</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="nationalid-image" name="NationalIdImage" accept="image/*">
                        <label class="custom-file-label" for="nationalid-image">Choose file</label>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.NationalIdImagePath))
                    {
                        <div class="mt-2">
                            <img src="@Model.NationalIdImagePath" alt="National ID" style="max-width: 100%; max-height: 200px;" />
                        </div>
                    }
                </div>
            </div>
            
            <div class="child-fields">
                <div class="form-group">
                    <label asp-for="BirthRegistrationNo" class="control-label">Birth Registration No</label>
                    <input asp-for="BirthRegistrationNo" class="form-control" maxlength="20" />
                    <span asp-validation-for="BirthRegistrationNo" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="control-label">Birth Registration Image</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="birthregistration-image" name="BirthRegistrationImage" accept="image/*">
                        <label class="custom-file-label" for="birthregistration-image">Choose file</label>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.BirthRegistrationImagePath))
                    {
                        <div class="mt-2">
                            <img src="@Model.BirthRegistrationImagePath" alt="Birth Registration" style="max-width: 100%; max-height: 200px;" />
                        </div>
                    }
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" required />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" required maxlength="100" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FatherName" class="control-label">Father's Name</label>
                        <input asp-for="FatherName" class="form-control" required maxlength="100" />
                        <span asp-validation-for="FatherName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MotherName" class="control-label">Mother's Name</label>
                        <input asp-for="MotherName" class="form-control" required maxlength="100" />
                        <span asp-validation-for="MotherName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Nationality" class="control-label">Nationality</label>
                        <select asp-for="Nationality" asp-items="Html.GetEnumSelectList<BashindaAPI.Models.Nationality>()" class="form-control" required>
                            <option value="">-- Select Nationality --</option>
                        </select>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="BloodGroup" class="control-label">Blood Group</label>
                        <select asp-for="BloodGroup" asp-items="Html.GetEnumSelectList<BashindaAPI.Models.BloodGroup>()" class="form-control" required>
                            <option value="">-- Select Blood Group --</option>
                        </select>
                        <span asp-validation-for="BloodGroup" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Profession" class="control-label">Profession</label>
                        <select asp-for="Profession" asp-items="Html.GetEnumSelectList<BashindaAPI.Models.Profession>()" class="form-control" required>
                            <option value="">-- Select Profession --</option>
                        </select>
                        <span asp-validation-for="Profession" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label">Gender</label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<BashindaAPI.Models.Gender>()" class="form-control" required>
                            <option value="">-- Select Gender --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label">Mobile Number</label>
                        <input asp-for="MobileNo" class="form-control" required maxlength="20" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" required maxlength="100" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label">Self Image</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="self-image" name="SelfImage" accept="image/*">
                    <label class="custom-file-label" for="self-image">Choose file</label>
                </div>
                @if (!string.IsNullOrEmpty(Model.SelfImagePath))
                {
                    <div class="mt-2">
                        <img src="@Model.SelfImagePath" alt="Self Image" style="max-width: 100%; max-height: 200px;" />
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>Permanent Resident Information</h4>
        </div>
        <div class="card-body">
            <!-- Include the location fields partial -->
            <partial name="_LocationFields" model="Model.Location" />
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/location-dropdowns.js"></script>
    <script src="~/js/renter-profile.js"></script>
    
    <!-- Include Toastr for nicer notifications -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
} 