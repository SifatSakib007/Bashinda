@model BashindaAPI.ViewModels.LocationViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="DivisionId" class="control-label">Division</label>
            <select asp-for="DivisionId" asp-items="Model.Divisions" class="form-control" id="division-dropdown" required>
                <option value="">-- Select Division --</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="DistrictId" class="control-label">District</label>
            <select asp-for="DistrictId" asp-items="Model.Districts" class="form-control" id="district-dropdown" required disabled>
                <option value="">-- Select District --</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="UpazilaId" class="control-label">Upazila</label>
            <select asp-for="UpazilaId" asp-items="Model.Upazilas" class="form-control" id="upazila-dropdown" required disabled>
                <option value="">-- Select Upazila --</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Area Type</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AreaType" id="city-corporation" value="0" required>
                    <label class="form-check-label" for="city-corporation">City Corporation</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AreaType" id="pourasava" value="1">
                    <label class="form-check-label" for="pourasava">Pourasava</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="AreaType" id="union" value="2">
                    <label class="form-check-label" for="union">Union</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="WardId" class="control-label">Ward</label>
            <select asp-for="WardId" asp-items="Model.Wards" class="form-control" id="ward-dropdown" required disabled>
                <option value="">-- Select Ward --</option>
            </select>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="VillageId" class="control-label">Village/Area</label>
            <select asp-for="VillageId" asp-items="Model.Villages" class="form-control" id="village-dropdown" required disabled>
                <option value="">-- Select Village/Area --</option>
            </select>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="PostCode" class="control-label">Post Code</label>
            <input asp-for="PostCode" class="form-control" required maxlength="10" />
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="HoldingNo" class="control-label">Holding No</label>
            <input asp-for="HoldingNo" class="form-control" required maxlength="50" />
            <span asp-validation-for="HoldingNo" class="text-danger"></span>
        </div>
    </div>
</div>

<input type="hidden" id="selected-division-id" value="@Model.DivisionId" />
<input type="hidden" id="selected-district-id" value="@Model.DistrictId" />
<input type="hidden" id="selected-upazila-id" value="@Model.UpazilaId" />
<input type="hidden" id="selected-area-type" value="@((int)Model.AreaType)" />
<input type="hidden" id="selected-ward-id" value="@Model.WardId" />
<input type="hidden" id="selected-village-id" value="@Model.VillageId" /> 